{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2,
    "useEditorconfig": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "warn"
      },
      "correctness": {
        "noUnusedVariables": "error"
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all"
    }
  },

  "overrides": [
    {
      "includes": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "warn"
          }
        }
      }
    },
    {
      "includes": ["scripts/**"],
      "linter": {
        "enabled": false
      }
    }
  ],

  "files": {
    "ignoreUnknown": true
  },

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
